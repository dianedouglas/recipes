<h1>Recipes</h1>

<p>Your Recipes:</p>
  <ul>
    <% @recipes.each do |recipe| %>
      <li>
        <a href="/recipes/<%= recipe.id%>"><%= recipe.name%></a>
      </li>
    <%end%>
  </ul>

<a href="/recipes/new">Create New Recipe</a>


<h1>Search By Tag:</h1>

<form action="/recipes/search" method="get">
  <label for="search_tag">Search Tag</label>
  <input id="search_tag" type="text" name="query">
  <button>Search</button>
</form>
