<h1>Edit <%= @recipe.name %></h1>

<form action="/recipes/<%=@recipe.id%>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="recipe_name">Name</label>
  <input id="recipe_name" type="text" name="recipe[name]" value="<%=@recipe.name%>">
  <label for="recipe_description">Description</label>
  <input id="recipe_description" type="text" name="recipe[description]" value="<%=@recipe.description%>">
  <label for="recipe_tag">Add a Tag</label>
  <input id="recipe_tag" type="text" name="tag[name]" value="<%= @recipe.tags.map {|tag| tag.name}.join(', ')%>">
  <button>Update</button>
</form>
